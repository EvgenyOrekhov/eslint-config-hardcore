{
  "$schema": "https://json.schemastore.org/eslintrc.json",

  "plugins": [
    "promise",
    "security",
    "import",
    "unicorn",
    "array-func",
    "sonarjs",
    "eslint-comments",
    "no-use-extend-native",
    "no-constructor-bind",
    "ext",
    "regexp",
    "@microsoft/sdl",
    "no-unsanitized",
    "unused-imports",
    "sonar",
    "simple-import-sort",
    "perfectionist",
    "compat",
    "nested-if",
    "prefer-arrow-functions"
  ],

  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },

  "env": {
    "es2024": true
  },

  "reportUnusedDisableDirectives": true,

  "ignorePatterns": [
    "!.*",

    ".git/",
    "node_modules/",
    "bower_components/",
    "jspm_packages/",
    ".npm/",
    "vendor/",

    "lib-cov/",
    "coverage/",
    ".nyc_output/",
    ".cache/",

    "build/",
    "dist/",
    "tmp/",

    "**/*.min.*"
  ],

